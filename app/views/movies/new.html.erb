<% if @movie.errors.any? %>
  <% @movie.errors.full_messages.each do |msg| %>
    <p class="error-msg"><%= msg %></p>
  <% end %>
<% end %>

<%= form_for @movie do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :year %><br>
  <%= f.text_field :year %><br>

  <%= f.label :synopsis %><br>
  <%= f.text_area :synopsis %><br>

  <%= f.submit "Create Movie" %>
<% end %>